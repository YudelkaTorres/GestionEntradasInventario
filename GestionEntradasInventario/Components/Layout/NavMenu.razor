@implements IDisposable

@inject NavigationManager NavigationManager

@if (!isAccountPage)
{
    <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">GestionEntradasInventario</a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="nav flex-column">

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Productos/Index">
                    <span class="bi bi-box-seam me-2" aria-hidden="true"></span> Productos
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Entradas/Index">
                    <span class="bi bi-journal-arrow-down me-2" aria-hidden="true"></span> Entradas
                </NavLink>
            </div>

            <AuthorizeView>
                <Authorized>
                    <div class="nav-item px-3">
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="nav-link">
                                <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                            </button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Register">
                            <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Login">
                            <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </nav>
    </div>
}
@code {
    private string? currentUrl;
    private string returnUrl = "/";
    private bool isAccountPage;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void SetCurrentUrl(string absoluteUrl)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(absoluteUrl);

        isAccountPage = !string.IsNullOrWhiteSpace(currentUrl)
            && currentUrl.StartsWith("Account", StringComparison.OrdinalIgnoreCase);

        returnUrl = string.IsNullOrWhiteSpace(currentUrl) ? "/" : $"/{currentUrl}";
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

