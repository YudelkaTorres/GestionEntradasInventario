@page "/Productos/Index"
@inject ProductosService productosService
@inject NavigationManager navigationManager
@rendermode InteractiveServer
@inject ToastService toastService
@attribute [Authorize]

<PageTitle>Registro de Productos</PageTitle>
<div class="container">
    <div class="card shadow-lg">
        <div  class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Registro de Productos</h5>
            <a href="/Productos/Create" class="btn btn-primary">
                <span class="bi bi-plus-square mt-2"></span> Crear
            </a>
        </div>

        <div class="card-body">
            @*labels*@
            <div class="row">

                @*Filtrar por*@
                <div class="col-3">
                    <label class="col-form-label"><strong>Filtrar por</strong></label>
                </div>

                @*ValorFiltro*@
                <div class="col-4">
                    <label class="col-form-label"><strong>B&uacute;squeda</strong></label>
                </div>
            </div>

            @*Inputs y botones*@
            <div class="row align-items-center">
                @*Filtro*@
                <div class="col-3">
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" selected disabled>Elija una opción</option>
                        <option value="ProductoId">ProductoId</option>
                        <option value="Descripcion">Descripción</option>
                        <option value="Costo">Costo</option>
                        <option value="Precio">Precio</option>
                        <option value="Existencia">Existencia</option>
                    </InputSelect>
                </div>

                @*Busqueda*@
                <div class="col-4">
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar" />
                        <button type="button" class="btn btn-outline-primary bi bi-search" @onclick="Buscar"></button>
                        <button type="button" class="btn btn-outline-secondary" @onclick="Restablecer"><span class="bi bi-arrow-counterclockwise" /></button>
                    </div>
                </div>

                <table class="table table-hover mt-3">
                    <thead class="table table-striped text-black">
                        <tr>
                            <th>ProductoId</th>
                            <th>Descripción</th>
                            <th>Costo</th>
                            <th>Precio</th>
                            <th>Existencia</th>
                            <th class="text-center">Opciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var producto in ListaProductos)
                        {
                            <tr>
                                <td>@producto.ProductoId</td>
                                <td>@producto.Descripcion</td>
                                <td>@producto.Costo.ToString("N2")</td>
                                <td>@producto.Precio.ToString("N2")</td>
                                <td>@producto.Existencia</td>

                                <td class="text-center">
                                    <a href="/Productos/Edit/@producto.ProductoId"
                                       class="btn btn-outline-primary bi bi-pencil-square"></a>

                                    <button type="button"
                                            class="btn btn-outline-danger ms-1"
                                            @onclick="() => MostrarModalEliminar(producto.ProductoId)">
                                        <span class="bi bi-trash"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer space-between">
                <label class="ms-3"><strong>Cantidad:</strong> @ListaProductos.Count</label>
            </div>

        </div>
    </div>
</div>

@if (MostrarConfirmacion)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <span class="bi bi-exclamation-triangle me-2"></span>
                        Confirmar eliminación
                    </h5>
                </div>

                <div class="modal-body text-center">
                    <p class="mb-0">
                        ¿Estás segura de que deseas eliminar este producto?
                    </p>
                    <small class="text-muted">
                        Esta acción no se puede deshacer.
                    </small>
                </div>

                <div class="modal-footer justify-content-center">
                    <button type="button"
                            class="btn btn-danger"
                            @onclick="@(async () => await EliminarConfirmado())">
                        Sí, eliminar
                    </button>

                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="CerrarModal">
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    public List<Productos> ListaProductos { get; set; } = new List<Productos>();

    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    public bool MostrarConfirmacion { get; set; } = false;

    public int ProductoIdSeleccionado { get; set; } = 0;

    protected override async Task OnInitializedAsync()
    {
        ListaProductos = await productosService.Listar(p => p.ProductoId > 0);
    }

    private async Task Buscar()
    {
        var valor = (ValorFiltro ?? "").Trim();

        if (string.IsNullOrWhiteSpace(valor))
        {
            ListaProductos = await productosService.Listar(p => p.ProductoId > 0);
            return;
        }

        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "ProductoId")
                ListaProductos = await productosService.Listar(p => p.ProductoId.ToString().Contains(ValorFiltro.Trim()));

            else if (Filtro == "Descripcion")
                ListaProductos = await productosService.Listar(p => p.Descripcion.ToLower().Contains(ValorFiltro.Trim().ToLower()));

            else if (Filtro == "Costo")
                ListaProductos = await productosService.Listar(p => p.Costo.ToString().Contains(ValorFiltro.Trim()));

            else if (Filtro == "Precio")
                ListaProductos = await productosService.Listar(p => p.Precio.ToString().Contains(ValorFiltro.Trim()));

            else if (Filtro == "Existencia")
                ListaProductos = await productosService.Listar(p => p.Existencia.ToString().Contains(ValorFiltro.Trim()));
        }
        else
        {
            ListaProductos = await productosService.Listar(p => p.ProductoId > 0);
        }
    }

    public async Task Restablecer()
    {
        ListaProductos = await productosService.Listar(p => p.ProductoId > 0);
        ValorFiltro = string.Empty;
        Filtro = string.Empty;
    }

    private async Task EliminarConfirmado()
    {

        MostrarConfirmacion = false;

        var eliminado = await productosService.Eliminar(ProductoIdSeleccionado);

        if (eliminado)
        {
            toastService.ShowSuccess("Se ha eliminado correctamente.");
            ListaProductos = await productosService.Listar(p => p.ProductoId > 0);
        }
        else
        {
            toastService.ShowError("No se ha podido eliminar correctamente.");
        }

        ProductoIdSeleccionado = 0;
    }

    private void MostrarModalEliminar(int productoId)
    {
        ProductoIdSeleccionado = productoId;
        MostrarConfirmacion = true;
    }

    private void CerrarModal()
    {
        MostrarConfirmacion = false;
        ProductoIdSeleccionado = 0;
    }
}